{% extends '_layout.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block main %}
    <h1>Здравствуйте</h1>
    <p class="lead">
        Даб даб даб да я, масло масло
    </p>

    <div class="card-deck mb-3 text-center">
        {% for workspace in workspaces %}
            {% if is_granted(rights.view, workspace) %}
                <div class="col-lg-6 col-md-12">
                <div class="card mb-3 shadow-sm workspace">

                    <div class="card-body">
                        <h3 class="card-title">{{ workspace.name }}</h3>
                        <div class="px-3 workspace-card-desc">
                            <p class="card-text">{{ workspace.description }}</p>
                        </div>

                    </div>

                    <div class="card-footer px-5">
                        <a class="card-link" href="{{ path('workspace_view', {id: workspace.id}) }}">{{ 'Смотреть'|trans }}</a>
                        {% if is_granted(rights.delete, workspace) %}
                            <a class="card-link" href="{{ path('workspace_remove', {id: workspace.id}) }}">{{ 'Удалить'|trans }}</a>
                        {% endif %}
                    </div>
                </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>


{% endblock %}
